@namespace Planner.App.Components

<EditForm Model="_model" OnValidSubmit="LoginUserAsync">
    <DataAnnotationsValidator />

    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@Language["WelcomeTo"] Planner App</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudTextField Label="Email" HelperText=@Language["Required"] @bind-Value="@_model.Email" />
            <MudTextField InputType="InputType.Password" Label=@Language["Password"] HelperText=@Language["Required"] @bind-Value="@_model.Password" />

            <ValidationSummary />

            @if (!string.IsNullOrWhiteSpace(_errorMessage))
            {
                <MudAlert Severity="Severity.Error" Class="my-2" Variant="Variant.Filled">@_errorMessage</MudAlert>
            }
        </MudCardContent>
        <MudCardActions>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Text" Color="Color.Primary" Disabled="_isBusy">@Language["Login"]</MudButton>
            <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Class="ml-1" Disabled="_isBusy" OnClick="RedirectToRegister">@Language["Register"]</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>